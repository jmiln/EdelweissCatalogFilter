{
    "manifest_version": 2,
    "name": "Edelweiss Utils",
    "version": "2.8",

    "description": "Various utilities to help make using Edelweiss easier.",

    "permissions": [
        "activeTab",
        "storage"
    ],
    
    "applications": {
        "gecko": {
            "id": "{9757e200-a53d-4e01-a672-b0ca60aeb2b3}"
        }
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": true,
        "open_in_tab": true
    },

    "page_action": {
        "browser_style": true,
        "default_icon": {
            "18": "icons/books1x.png",
            "36": "icons/books2x.png"
        },
        "default_title": "Filter Catalogs",
        "show_matches": ["*://*.edelweiss.plus/*"],
        "default_popup": "popup/popup.html"        
    }
}